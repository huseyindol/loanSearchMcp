{
  "name": "loans-mcp-server",
  "version": "1.0.0",
  "description": "Professional MCP server for housing loan calculations with natural language support",
  "type": "module",
  "main": "./dist/src/server.js",
  "bin": {
    "loans-mcp-server": "./dist/src/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/src/server.js",
    "start:legacy": "node dist/index.js",
    "http": "npm run build && node dist/src/http-server.js",
    "http:dev": "tsc && node dist/src/http-server.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "node dist/src/server.js --log-level INFO",
    "debug": "node dist/src/server.js --log-level DEBUG",
    "inspect": "npx @modelcontextprotocol/inspector node dist/src/server.js",
    "inspect:debug": "npm run build && npx @modelcontextprotocol/inspector node dist/src/server.js"
  },
  "dependencies": {
    "@google/genai": "^1.8.0",
    "@modelcontextprotocol/sdk": "^1.14.0",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.6.3"
  }
}
