{
  "name": "loans-mcp-server",
  "version": "1.0.0",
  "description": "Professional MCP server for housing loan calculations with natural language support",
  "type": "module",
  "main": "./dist/src/server.js",
  "bin": {
    "loans-mcp-server": "./dist/src/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/src/server.js",
    "start:legacy": "node dist/index.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "node dist/src/server.js --log-level INFO",
    "debug": "node dist/src/server.js --log-level DEBUG",
    "inspect": "npx @modelcontextprotocol/inspector node dist/src/server.js",
    "inspect:debug": "npm run build && npx @modelcontextprotocol/inspector node dist/src/server.js"
  },
  "dependencies": {
    "@google/genai": "^1.8.0",
    "@modelcontextprotocol/sdk": "latest",
    "axios": "^1.10.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "typescript": "^5.0.0"
  }
}
